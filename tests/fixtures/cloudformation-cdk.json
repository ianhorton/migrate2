{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CDK Migration Stack",
  "Resources": {
    "CounterTableFE2C0268": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "migration-sandbox-table",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "StreamSpecification": {
          "StreamViewType": "NEW_AND_OLD_IMAGES"
        }
      },
      "UpdateReplacePolicy": "Retain",
      "DeletionPolicy": "Retain"
    },
    "CounterLogGroupB1D890C5": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/migration-sandbox-dev-counter",
        "RetentionInDays": 7
      },
      "UpdateReplacePolicy": "Retain",
      "DeletionPolicy": "Retain"
    },
    "DataBucketE3889A50": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "migration-sandbox-bucket-dev",
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      },
      "UpdateReplacePolicy": "Retain",
      "DeletionPolicy": "Retain"
    },
    "CounterFunctionServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              "",
              [
                "arn:",
                {
                  "Ref": "AWS::Partition"
                },
                ":iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
              ]
            ]
          }
        ]
      }
    },
    "CounterFunctionServiceRoleDefaultPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Action": [
                "dynamodb:BatchGetItem",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:Query",
                "dynamodb:GetItem",
                "dynamodb:Scan",
                "dynamodb:ConditionCheckItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem"
              ],
              "Effect": "Allow",
              "Resource": [
                {
                  "Fn::GetAtt": [
                    "CounterTableFE2C0268",
                    "Arn"
                  ]
                },
                {
                  "Ref": "AWS::NoValue"
                }
              ]
            }
          ],
          "Version": "2012-10-17"
        },
        "PolicyName": "CounterFunctionServiceRoleDefaultPolicy",
        "Roles": [
          {
            "Ref": "CounterFunctionServiceRole"
          }
        ]
      }
    },
    "CounterFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": "cdk-assets-bucket",
          "S3Key": "assets/counter.zip"
        },
        "Role": {
          "Fn::GetAtt": [
            "CounterFunctionServiceRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "TABLE_NAME": {
              "Ref": "CounterTableFE2C0268"
            }
          }
        },
        "FunctionName": "migration-sandbox-dev-counter-cdk",
        "Handler": "src/counter.handler",
        "Runtime": "nodejs18.x"
      },
      "DependsOn": [
        "CounterFunctionServiceRoleDefaultPolicy",
        "CounterFunctionServiceRole"
      ]
    }
  },
  "Outputs": {
    "CounterFunctionArn": {
      "Value": {
        "Fn::GetAtt": [
          "CounterFunction",
          "Arn"
        ]
      }
    },
    "TableName": {
      "Value": {
        "Ref": "CounterTableFE2C0268"
      }
    }
  }
}
